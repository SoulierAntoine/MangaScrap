{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "Node",
		"sourceMap": true,
		"outDir": "./built",
		"allowJs": true,
		"target": "es5",
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"strict": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
